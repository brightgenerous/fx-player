<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<VBox xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.brightgenerous.fxplayer.application.playlist.PlayList"
    stylesheets="com/brightgenerous/fxplayer/application/FxPlayer.css,
        com/brightgenerous/fxplayer/application/playlist/PlayList.css"
    minWidth="640" minHeight="240">
  <HBox id="control-pane">
    <Button text="%control.directory-chooser"
        onAction="#controlDirectoryChooser" mnemonicParsing="true" />
    <TextField fx:id="directoryText" id="directory-text" editable="false" HBox.hgrow="ALWAYS" />
  </HBox>
  <TableView fx:id="mediaList" VBox.vgrow="ALWAYS"
      tableMenuButtonVisible="true">
    <columns>
      <TableColumn fx:id="tableColumnIndex" text="%media.index" prefWidth="40" sortable="false">
        <cellValueFactory><PropertyValueFactory property="exist" /></cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="tableColumnCursor" prefWidth="60" sortable="false">
        <cellValueFactory><PropertyValueFactory property="cursor" /></cellValueFactory>
      </TableColumn>
      <TableColumn text="%media.title" prefWidth="275" sortable="false">
        <cellValueFactory><PropertyValueFactory property="title" /></cellValueFactory>
      </TableColumn>
      <TableColumn text="%media.artist" prefWidth="170" sortable="false">
        <cellValueFactory><PropertyValueFactory property="artist" /></cellValueFactory>
      </TableColumn>
      <TableColumn fx:id="tableColumnDuration" text="%media.duration" prefWidth="80" sortable="false">
        <cellValueFactory><PropertyValueFactory property="duration" /></cellValueFactory>
      </TableColumn>
    </columns>
  </TableView>
  <HBox id="control-pane">
    <VBox HBox.hgrow="ALWAYS">
      <Region prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS" />
      <HBox id="control-pane">
        <Slider fx:id="controlTime" min="0" max="0" HBox.hgrow="ALWAYS" />
      </HBox>
      <HBox id="control-pane">
        <Button fx:id="controlPlay" onAction="#controlPlay" text="%control.play" mnemonicParsing="true" />
        <Button onAction="#controlPrev" text="%control.prev" mnemonicParsing="true"/>
        <Button onAction="#controlNext" text="%control.next" mnemonicParsing="true" />
        <Slider fx:id="controlVolume" min="0.0" max="1.0" value="0.5" HBox.hgrow="ALWAYS" />
      </HBox>
    </VBox>
    <ImageView fx:id="image" fitWidth="100" fitHeight="100" preserveRatio="true" smooth="true"
        style="-fx-width:100;-fx-height:100;-fx-effect:dropshadow(three-pass-box,rgba(0,0,0,0.8),3,0,0,0);" />
  </HBox>
</VBox>
